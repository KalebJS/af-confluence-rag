# Confluence Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_AUTH_TOKEN=your_api_token_here
CONFLUENCE_SPACE_KEY=DOCS

# Confluence Cloud vs Server/Data Center
# Set to true for Confluence Cloud, false for Server/Data Center
CONFLUENCE_CLOUD=true

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Store Configuration
VECTOR_STORE_TYPE=chroma
VECTOR_STORE_PERSIST_DIR=./chroma_db
VECTOR_STORE_COLLECTION_NAME=confluence_docs

# Query Configuration
TOP_K_RESULTS=10

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Configuration file path
# CONFIG_PATH=config/production.yaml
